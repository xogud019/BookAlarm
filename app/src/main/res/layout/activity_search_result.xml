<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Search.SearchResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/iv_res"
        android:layout_width="230dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="189dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="230dp">

        <TextView
            android:textSize="20dp"
            android:id="@+id/title_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/price_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/salePrice_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            />

        <TextView
            android:id="@+id/disc_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/pub_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/sale_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/pubD_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/aut_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/trs_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/reg_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="350dp"
        android:text="등록"
        android:textColor="#2B2B2B"
        app:backgroundTint="#2196F3" />

    <LinearLayout
        android:layout_marginTop="400dp"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dec_res"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextView" />
    </LinearLayout>

</RelativeLayout>